%div{:class => 'results'}
	- people.each do |person| 
		%div{:class => 'results--result'}
			%div{:class => 'results--result-header'}
				%span
					%h1
						= "#{person.first_name} #{person.last_name}"
					%p
						= "Lives: #{person.city}, #{person.state}"
					%p
						= "Born: #{person.appearance_arrest_date}"
				%span{:class => 'results--img-wrapper'}
					%img{:src => '/profile-placeholder.png', :alt => 'Mugshot', :width => '86', :height => '86'}
			%hr
			%div{:class => 'results--result-meta'}
				%span
					%h1
						= "#{person.number_of_charges} Charges"
					%p
						= "Case: ##{person.case_number}"
					%p
						= "Charge: ##{person.charge_number}"